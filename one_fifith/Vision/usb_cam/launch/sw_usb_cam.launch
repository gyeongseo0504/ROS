<launch>
  <arg name="image_view" default="false" />

  <!-- First camera -->
  <node name="usb_cam1" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <rosparam command="load" file="$(find usb_cam)/config/usb_cam.yml"/>    
  </node>

  <!-- Second camera -->
  <node name="usb_cam2" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <rosparam command="load" file="$(find usb_cam)/config/usb_cam2.yml"/>
    <remap from="/usb_cam/image_raw" to="/usb_cam/image_raw2" />
    <remap from="/usb_cam/image_raw/compressed" to="/usb_cam/image_raw/compressed2" />
  </node>

  <!-- Image view for first camera -->
  <node if="$(arg image_view)" name="image_view1" pkg="image_view" type="image_view"
        respawn="false" output="screen">
    <remap from="image" to="/usb_cam/image_raw"/>
    <param name="autosize" value="true" />
  </node>

  <!-- Image view for second camera -->
  <node if="$(arg image_view)" name="image_view2" pkg="image_view" type="image_view"
        respawn="false" output="screen">
    <remap from="image" to="/usb_cam/image_raw2"/>
    <param name="autosize" value="true" />
  </node>
</launch>
